<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondox"

    tools:context="apps.proyecto.pairumani.appbuild.ResultadoLosaActivity">

    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:text="Resultado"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/txttitulo"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:text="Losa"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CÃ¡lculo para cubrir "
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:gravity="center"
            android:id="@+id/tvDatos"
            android:text="ddd"
            android:textColor="@color/black"
            android:textSize="16dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/scrollView2">
        <HorizontalScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"

                android:background="@color/white"
                android:padding="5dp"
                android:stretchColumns="*">

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"

                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Material"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Medida"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Precio"
                        android:textColor="@color/black" />

                </TableRow>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/black"
                    android:orientation="horizontal"></LinearLayout>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Cemento"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tvMCemento"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Medida"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCCemento"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/Pcemento"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardview_dark_background"
                    android:orientation="horizontal"></LinearLayout>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Arena"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvMarena"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Medida"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCarena"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/Parena"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardview_dark_background"
                    android:orientation="horizontal"></LinearLayout>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Grava"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvMgrava"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Medida"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCgrava"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/Pgrava"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />

                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardview_dark_background"
                    android:orientation="horizontal"></LinearLayout>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Agua"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCagua"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvMagua"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Medida"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/Pagua"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cantidad"
                        android:textColor="@color/black" />
                </TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardview_dark_background"
                    android:orientation="horizontal"></LinearLayout>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Total"
                        android:textColor="@color/black" />

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"

                        android:textColor="@color/black" />

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"

                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/TxtPtotal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Total"
                        android:textColor="@color/black" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardview_dark_background"
                    android:orientation="horizontal"></LinearLayout>


            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"> <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cemento: Bolsas 42.5 Kg, Arena 25kg, Grava 25  Kg. "
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textSize="16dp"
        android:id="@+id/textView2" />
        <Button
            android:layout_width="350dp"

            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="185dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Inicio"
            android:onClick="Home2"
            android:id="@+id/Home" />

    </RelativeLayout>




</RelativeLayout>
